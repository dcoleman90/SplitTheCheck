<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.restaurant.name %></td>
        <td><%= comment.user.name %></td>
        <td><%= comment.comment %></td>
        <td>
        	<%= link_to 'Show', comment %> <br>
        	<%= link_to 'Edit', edit_comment_path(comment) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>
