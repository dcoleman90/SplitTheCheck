		<%= f.label :city %>
		<%= f.text_field :city %>
	  </div>

	  <div class="field">
		<%= f.label :state %>
		<%= f.text_field :state %>
	  </div>

	  <div class="field">
		<%= f.label :zip %>
		<%= f.text_field :zip %>
	  </div>

	  <div class="actions">
