<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>User</th>
      <th>Up votes added</th>
      <th>Down votes added</th>
      <th>Up votes total</th>
      <th>Down votes total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.restaurant %></td>
        <td><%= history.user %></td>
        <td><%= history.up_votes_added %></td>
        <td><%= history.down_votes_added %></td>
        <td><%= history.up_votes_total %></td>
        <td><%= history.down_votes_total %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

